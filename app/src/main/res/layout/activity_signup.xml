<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="30dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@mipmap/ic_launcher_round" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_username"
                style="@style/edittext_primary"
                android:hint="Entrez Votre Pseudo"
                tools:text=""/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_first_name"
                style="@style/edittext_primary"
                android:hint="Entrez Votre Prénom"
                tools:text=""/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_last_name"
                style="@style/edittext_primary"
                android:hint="Entrez Votre Nom"
                tools:text=""/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_pass"
                style="@style/edittext_primary"
                android:hint="Entrez Votre Password"
                android:inputType="textPassword"
                android:text=""/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_cnfrm_pass"
                style="@style/edittext_primary"
                android:hint="Confirmez Votre Password"
                android:inputType="textPassword"
                tools:text=""/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_email"
                style="@style/edittext_primary"
                android:hint="Entrez Votre mail"
                tools:text=""/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_address"
                style="@style/edittext_primary"
                android:hint="Entrez Votre adresse"
                tools:text=" "/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_city"
                style="@style/edittext_primary"
                android:hint="Entrez Votre Ville"
                tools:text=""/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_postal_code"
                style="@style/edittext_primary"
                android:hint="Entrez Votre Code postal"
                android:inputType="number"
                tools:text=""/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_phone"
                style="@style/edittext_primary"
                android:hint="Entrez Votre Num de télépjone"
                android:inputType="phone"
                tools:text=""/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_signup"
                style="@style/button_primary"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="30dp"
                android:text="S'inscrire" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>